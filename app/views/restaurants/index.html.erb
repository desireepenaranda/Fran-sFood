<div class="container">
<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.city %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <% if current_user.email.eql?('penad@seas.upenn.edu') %>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>

        <td> <button type="button" class="btn btn-danger"><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></button>

        <% else %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.email.eql?('penad@seas.upenn.edu') %>
  <button type="button" class="btn btn-success">
  <%= link_to 'New Restaurant', new_restaurant_path %>
  </button>
<% else %>
<% end %>
