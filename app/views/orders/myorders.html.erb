<div class="container">
<p id="notice"><%= notice %></p>

<h1>Orders</h1>
<!-- if user is resutant should be different
 -->
<% if current_user.isRestaurant %>
  <table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <h2> PENDING ORDERS </h2>
    <% @orders.each do |order| %>
    <% if order.restaurant_id.eql?(current_user.id) %>
      <tr>
        <% if order.accepted.eql?(false) %>
        <td><%= order.user.email %></td>
        <td><%= order.restaurant.name %></td>
        <td><%= link_to 'Show', order %></td>

        <td> <button type="button" class="btn btn-success"><%= link_to 'Accept', order, method: :update_acceptance, data: { confirm: 'Are you sure?' } %></button></td>



        <% else %>
      <% end %>
      </tr>
      <% else %>
      <% end %>
    <% end %>
  </tbody>
</table>

